    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:src="@drawable/ic_baseline_close_24"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:id="@+id/close_label"
            app:layout_constraintStart_toStartOf="parent"
            />
        <ImageView
            android:src="@drawable/ic_baseline_check_24"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:id="@+id/check_label"
            app:layout_constraintEnd_toEndOf="parent"

            />
        <TextView
            android:id="@+id/textname"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:text="Name"
            app:layout_constraintTop_toBottomOf="@id/close_label"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editname"
            android:layout_width="400dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/textname"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />
        <TextView
            android:id="@+id/textlong"
            android:layout_width="400dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/editname"
            android:text="Longlilute" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editlong"
            android:layout_width="400dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/textlong"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/textlotitute"
            android:layout_width="400dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/editlong"
            android:text="Lotitute" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editlotitute"
            android:layout_width="400dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/textlotitute"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            />

        <TextView
            android:id="@+id/textemail"
            android:layout_width="400dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/editlotitute"
            android:text="Email" />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editemail"
            android:layout_width="400dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/textemail"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textpasword"
            android:layout_width="400dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/editemail"
            android:text="Password" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editpassword"
            android:layout_width="400dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/textpasword"
            android:ems="10"
            android:inputType="textPassword" />
        <TextView
            android:id="@+id/textphone"
            android:layout_width="400dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/editpassword"
            android:text="Phone" />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editphone"
            android:layout_width="400dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/textphone"
            android:ems="10"
            android:inputType="phone" />
        <TextView
            android:id="@+id/textempty"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:text=""
            app:layout_constraintTop_toBottomOf="@id/editphone"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>